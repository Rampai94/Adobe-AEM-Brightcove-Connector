<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Brightcove Player Playlist"
    sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <media
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Media"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <accountName
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Account Name"
                                        name="./accountName">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="/bin/brightcove/accounts"
                                            repoSource="{Boolean}false"/>
                                    </accountName>
                                    <videoList
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyOption="{Boolean}true"
                                        emptyText="Select"
                                        fieldLabel="Videos List:"
                                        name="./videoList"/>
                                </items>
                            </column>
                        </items>
                    </media>
                    <advanced
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Advanced"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <items jcr:primaryType="nt:unstructured">
                            <component_container_attributes
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Component Container Attributes"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <containerID
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="This does not replace the randomly generated ID, but will added to the Component's Container instead."
                                        fieldLabel="Container ID"
                                        name="./containerID"/>
                                    <containerClass
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Container Class"
                                        name="./containerClass"/>
                                </items>
                            </component_container_attributes>
                            <fieldset_player_styles
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Player Style"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <align
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyOption="{Boolean}true"
                                        emptyText="Select"
                                        fieldDescription="When configuring an HTML5 Playlist the following rules apply: Left:  Playlist appears after the Video element. Center:  Playlist appears after the Video element. Right:  Playlist appears before the Video element. Update your CSS accordingly."
                                        fieldLabel="Player Alignment:"
                                        name="./align">
                                        <items jcr:primaryType="nt:unstructured">
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="Left"
                                                value="left"/>
                                            <center
                                                jcr:primaryType="nt:unstructured"
                                                text="Center"
                                                value="center"/>
                                            <right
                                                jcr:primaryType="nt:unstructured"
                                                text="Right"
                                                value="right"/>
                                        </items>
                                    </align>
                                    <size
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/sizefield"
                                        fieldLabel="Size (px)">
                                        <width
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                            defaultValue=""
                                            emptyText="Width"
                                            min="0"
                                            name="./width"/>
                                        <height
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                            defaultValue=""
                                            emptyText="Height"
                                            min="0"
                                            name="./height"/>
                                    </size>
                                </items>
                            </fieldset_player_styles>
                            <fieldset_advanced_css
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Advanced CSS"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <inlineCSS
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldDescription="Warning: Limit the scope of these style rules by using the Container ID or Container Class defined above as Selectors in your CSS."
                                        fieldLabel="Inline CSS"
                                        name="./inlineCSS"/>
                                </items>
                            </fieldset_advanced_css>
                        </items>
                    </advanced>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
